# Integration Test Environment Configuration
# Using REAL development environment for testing

# Application Configuration
APP_NAME=multi-channel-ai-agent
APP_VERSION=1.0.0
NODE_ENV=development
PORT=4000
LOG_LEVEL=info
LOG_FORMAT=json
CORRELATION_ID_HEADER=x-correlation-id

# Database Configuration (Neon PostgreSQL - Development)
DATABASE_URL=postgresql://username:password@your-db-host.neon.tech/neondb?sslmode=require
DATABASE_POOL_SIZE=20
DATABASE_TIMEOUT=30000

# Redis Configuration (Upstash Redis - Development)
REDIS_URL=redis://default:your-redis-password@your-redis-host.upstash.io:6379
REDIS_TTL_DEFAULT=300
REDIS_QUEUE_MAX_SIZE=100000

# OpenAI Configuration (Real API Key)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_TIMEOUT=30000
OPENAI_MAX_RETRIES=3

# Webhook Configuration
WEBHOOK_SECRET=testing123
WEBHOOK_PORT=4000
WEBHOOK_PATH=/webhook/meta

# API Configuration
API_PORT=8080
API_KEY_HEADER=x-api-key
API_RATE_LIMIT=1000

# Worker Configuration
WORKER_CONCURRENCY=10
WORKER_POLL_INTERVAL=1000

# Extraction Configuration
EXTRACTION_INTERVAL=300000
EXTRACTION_INACTIVITY_THRESHOLD=300000
EXTRACTION_PROMPT_ID=your-extraction-prompt-id-from-openai

# Platform URLs
WHATSAPP_API_BASE_URL=https://graph.facebook.com/v24.0
INSTAGRAM_API_BASE_URL=https://graph.facebook.com/v24.0
WEBCHAT_WIDGET_URL=https://your-domain.com/widget
